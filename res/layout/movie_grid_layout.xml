<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CustomGridLayoutOutterContainerStyle">

    <RelativeLayout
        style="@style/CustomGridLayoutInnerContainerStyle" >

        <ImageView
            android:id="@+id/thumbnailImageView"
            style="@style/CustomGridLayoutThumbnailStyle"
            android:contentDescription="@string/grid_view_photo_description"
            android:src="@drawable/dr_no" />

        <TextView
            android:id="@+id/thumbnailMovieName"
            style="@style/CustomGridLayoutTextViewStyle"
            android:layout_below="@id/thumbnailImageView"
            android:maxLines="1"
            android:visibility="visible" />

        <TextView
            android:id="@+id/thumbnailMovieYear"
            style="@style/CustomGridLayoutTextViewStyle"
            android:layout_below="@id/thumbnailMovieName" />
    </RelativeLayout>

</LinearLayout>