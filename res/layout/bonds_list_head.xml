<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ExpandableListCustomHeadOutterContainerStyle">

    <RelativeLayout
        style="@style/ExpandableListCustomHeadInnerContainerStyle">

        <ImageView
            android:id="@+id/bondPhoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/bond_photo_description"
            android:src="@drawable/skyfall" />

        <TextView
            android:id="@+id/bondName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/bondPhoto" />
    </RelativeLayout>

</LinearLayout>